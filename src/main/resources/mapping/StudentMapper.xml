<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jxd.stutrack.mapper.StudentMapper">
    <select id="getAllStudents" resultType="map">
        select * from student
        <where>
            <if test="'all'!=sname">
              sname like concat('%',#{sname},'%')
            </if>
              and studentstate = 0
        </where>
          LIMIT #{counts},#{pagesize}
    </select>
</mapper>
